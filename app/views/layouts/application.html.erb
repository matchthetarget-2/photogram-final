<!DOCTYPE html>
<html>
  <head>
    <title>Photogram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <ul>
          <li>
            <a href="/users">All users</a>
          </li>
          <li>
            <a href="/photos">All public photos</a>
          </li>
          <% if session[:user_id] != nil %>
              <li>
                <a href="/edit_user_profile">
                    <%= User.where({:id => session[:user_id]}).at(0).username %>
                </a>
              </li>
              <li>
                <a href="/user_sign_out">Sign out</a>
              </li>
          <%end%>  
          <% if session[:user_id] == nil %>
            <li>
              <a href="/user_sign_in">Sign in</a>
            </li>
            <li>
              <a href="/user_sign_up">Sign up</a>
            </li>
          <%end%>  
       
       
        
      </ul>
    </nav>


    <% if notice.present? %>
      <div style="border: thin green solid;color: green">
        <%= notice %>
      </div>
     <% end %>
    
    <% if alert.present? %>
      <div style="border: thin red solid;color: red">
        <%= alert %>
      </div>
   <% end %>

    <%= yield %>
  </body>
</html>
